package src{	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.filters.BevelFilter;	import flash.geom.ColorTransform;	public class PlayButton extends Sprite	{		private var _id:int;		private var _videoURL:String;		//private var _label:TextField;		private var _overColor:uint;// over and click color are the same		private var _outColor:uint = 0xBCC1C5;		private var _txtFormat:TextFormat;		private var _clicked:Boolean = false;		private var _bevelFilter:BevelFilter;		private var _bevelFilter1:BevelFilter;		private var _newColorTransform:ColorTransform;		//private var _buttonBg:ButtonBg;		//private var _tab:TabBar;		//private var 		public function PlayButton(id:int,label:String, overColor:uint)		{			_id = id;			_label.text = label;			_label.mouseEnabled = false;			_buttonBg.mouseEnabled = false;			_overColor = overColor;			buttonMode = true;			mouseEnabled = true;			_newColorTransform = new ColorTransform;			_greenButton.visible = false;			_greenButton.mouseEnabled = false;			_txtFormat = new TextFormat();			addEventListener(MouseEvent.MOUSE_OVER, onMouseOver);			addEventListener(MouseEvent.MOUSE_OUT, onMouseOut);			addEventListener(MouseEvent.CLICK, onClick)		}// end constructor		public function enabledState(color:uint = 0x999999)		{			//setBgColor(_outColor);		}		public function disabledState(color:uint = 0x999999):void		{			//setBgColor(_overColor);		}		public function onMouseOver(event:MouseEvent):void		{			if (id == 2 )			{			_greenButton.visible = true;			_greenButton.gotoAndStop(1);			_txtFormat.color = 0Xffffff;			_label.setTextFormat(_txtFormat);			}					}// end onOver		public function onMouseOut(event:MouseEvent):void		{			if(id == 2)			{			_greenButton.visible = false;			_greenButton.gotoAndStop(1)			_txtFormat.color = 0X003168;			_label.setTextFormat(_txtFormat);			}					}// end onOut		private function onClick(event:MouseEvent)		{			dispatchEvent(new CustomEventDispatcher(_id,CustomEvent.GET_NAME,			true,			false			));		}		public function pulsate()		{			_greenButton.visible = true;			_greenButton.gotoAndPlay(2);			_buttonBg.visible = false;			_txtFormat.color = 0Xffffff;			_label.setTextFormat(_txtFormat);		}		public function disablePulsate()		{			_greenButton.visible = false;			_greenButton.gotoAndStop(1);			_buttonBg.visible = true;			_txtFormat.color = 0X003168;			_label.setTextFormat(_txtFormat);		}				public function get buttonName():String		{			return _label.text;		}		public function get id():int		{			return _id;		}	}// end of launch class}// end package