package src{	import flash.display.*;	public class HandleButtonClick extends Sprite	{		static private  var __instance:HandleButtonClick;		public function HandleButtonClick(HandleButtonClickEnforcer:HandleButtonClickEnforcer)		{		}		public static function getInstance():HandleButtonClick		{			if (HandleButtonClick.__instance == null)			{				HandleButtonClick.__instance = new HandleButtonClick(new HandleButtonClickEnforcer);			}			return HandleButtonClick.__instance;		}				public function handler(id:int, title:String, videoURL:String)		{			switch (id)			{				case 1:				trace ("case one");				checkKeyFeatures();				Global.getInstance().setPlaying("introduction")				Global.getInstance().playVideo(videoURL);				break;				case 2:				checkKeyFeatures();				Container.getInstance().addDisplayObject(PlayList.getInstance());				PlayList.getInstance().createPlayList(videoURL);				VideoPlayer.getInstance().stopStream();				break;				case 3:				Global.getInstance().setPlaying("outro")				checkKeyFeatures();				Global.getInstance().playVideo(videoURL);				break;			}//end switch		}//end handler				public function checkKeyFeatures()		{			Global.getInstance().clearPlaylist();			SWFContainer.getInstance().removeDisplayObject();			if(Container.getInstance().numChildren > 0)			{				PlayList.getInstance().clearInterface();			}		}	}// end class}//end packageclass HandleButtonClickEnforcer{}